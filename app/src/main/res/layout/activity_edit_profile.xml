<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fyp.inrestaurant.EditProfile">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:background="@color/deepTeal"
            app:layout_collapseMode="pin"
            android:navigationIcon="?attr/homeAsUpIndicator"
            tools:targetApi="lollipop"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"/>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/anchor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        android:layout_below="@+id/appbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardView"
            android:layout_margin="@dimen/card_margin">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="6dp">
                <!--Change Username-->
                <TextView
                    android:id="@+id/labelVw1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/card_margin"
                    android:text="@string/uName"
                    android:layout_row="0"
                    android:layout_column="0"/>
                <EditText
                    android:id="@+id/changeUname"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:inputType="text"/>
                <!--Change Password-->
                <EditText
                    android:id="@+id/changePword"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:inputType="textPassword"
                    android:visibility="gone"/>
                <!--Change Email-->
                <TextView
                    android:id="@+id/labelVw2"
                    android:layout_marginTop="-8dp"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uEmail"
                    android:layout_row="1"
                    android:layout_column="0"/>
                <EditText
                    android:id="@+id/changeUEmail"
                    android:layout_marginTop="-8dp"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:inputType="textEmailAddress"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"/>
                <!--Confirm New Password-->
                <EditText
                    android:id="@+id/changeConfirm"
                    android:layout_marginTop="-8dp"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:inputType="textPassword"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"
                    android:visibility="gone"/>
                <!--Confirm Password-->
                <TextView
                    android:id="@+id/labelVw3"
                    android:layout_marginTop = "24dp"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pWord"
                    android:layout_row="2"
                    android:layout_column="0"/>
                <EditText
                    android:id="@+id/confPass"
                    android:layout_marginTop = "24dp"
                    android:layout_margin="@dimen/card_margin"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:inputType="textPassword"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_gravity="fill_horizontal"/>
                <Button
                    android:id="@+id/submitEdit"
                    android:text="@string/confirm_change"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_columnSpan="2"
                    android:layout_column="0"
                    android:layout_marginBottom="16dp"
                    android:layout_margin="@dimen/card_margin"/>

            </GridLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</RelativeLayout>
